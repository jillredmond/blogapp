<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Post title</th>
      <th>Post content</th>
      <th>Post photo</th>
      <th>Like</th>
      <th>Video</th>
      <th>Reblog</th>
      <th>Hashtags</th>
      <th>User</th>
      <th>Blog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_title %></td>
        <td><%= post.post_content %></td>
        <td><%= post.post_photo %></td>
        <td><%= post.like %></td>
        <td><%= post.video %></td>
        <td><%= post.reblog %></td>
        <td><%= post.hashtags %></td>
        <td><%= post.user_id%></td>
        <td><%= post.blog.blog_name if post.blog.present?%></td>
		<%= timeago_tag post.created_at, :nojs => true, :limit => 1.day.ago %>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
